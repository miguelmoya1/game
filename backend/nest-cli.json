{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../data/**/*",
        "outDir": "dist/data"
      },
      {
        "include": "../languages/**/*",
        "outDir": "dist/languages"
      }
    ]
  }
}
